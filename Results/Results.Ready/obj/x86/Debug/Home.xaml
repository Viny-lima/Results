<Page x:ConnectionId='1'
    x:Class="Results.Ready.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Results.Ready"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="using:Results.Ready.Converts"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:VisibilityFromBoolConvert x:Key="CovertBoolean"/>
    </Page.Resources>
    
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBlock x:ConnectionId='2' x:Name="Menssage"
                                                                  
                   Foreground="Red"
                   FontSize="40"/>
            <Button x:ConnectionId='3' x:Name="SeeExams"
                                          
                    Content="Exams"
                                                                                                                     
                 />
        </StackPanel>
        
    </Grid>
</Page>

