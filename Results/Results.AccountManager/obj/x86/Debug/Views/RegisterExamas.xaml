<Page
    x:Class="Results.AccountManager.Views.RegisterExamas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Results.AccountManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBox x:ConnectionId='2' x:Name="Name" 
                     Header="Name"
                     PlaceholderText="name"
                     Width="200"/>
            <TextBox x:ConnectionId='3' x:Name="Description" 
                     Header="Description" 
                     PlaceholderText="Description"
                     TextWrapping="Wrap"
                     Width="200"
                     Height="200"/>
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='4' x:Name="SubmitBtn" 
                    Content="Submit"
                                           />
                <Button x:ConnectionId='5' x:Name="Back" 
                    Content="Back" 
                                      
                    Margin="20 20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

